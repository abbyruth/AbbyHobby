@{
    ViewData["Title"] = "Price Calculator";
}
<h1>@ViewData["Hobby Price Calculator"]</h1>

<h2>Calculate the Price:</h2>
<p>Input how many hours you want to take lessons and the price calculator will calculate your overall price.</p>

<label for="hours">Number of Hours:</label>
<input type="number" id="hours" min="1">
<br><br />
<label for="hourly-rate">Hourly Rate:</label>
<input type="text" id="hourly-rate" value="$30" readonly>
<br><br />
<button id="calculate-btn">Calculate Total</button>
<br><br />
<label for="total">Total:</label>
<input type="text" id="total" readonly>